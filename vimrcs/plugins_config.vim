" map <leader>. :MRU<CR>


""""""""""""""""""""""""""""""
" => CTRL-P
""""""""""""""""""""""""""""""
let g:ctrlp_working_path_mode = 0

let g:ctrlp_map = '<c-f>'
map <leader>f :CtrlP<cr>

" CtrlP plugin
nnoremap <leader>f :CtrlP<cr>
nnoremap <leader>. :CtrlPMRUFiles<cr>
